<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Generator</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        margin-left: 20px;
        --bs-body-font-family: var(--bs-font-monospace);
        --bs-body-line-height: 1.4;
        --bs-body-bg: var(--bs-gray-100);
      }
      #container {
        width: 50%;
        background-color: rgb(177, 242, 242);
        border-radius: 10px ;
        margin-top: 10px;
      }
      table,th,tr,td{
        border: 1px solid black;
        width: 50%;
        height: 70%;
        background-color: antiquewhite;
        padding: 10px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>

    <!-- The data from the backend is served in locals -->
    <h1>URL Generator</h1>
    <% if (locals.id) { %>
     <p>URL Generated http://localhost:3000/<%= id %></p>
    <% } %>
    <form action="/url" method="post">
      <label class="form-label">Enter the URL</label>
      <!-- The name property below is very important -->
      <input type="text" name="url" />
      <button type="submit" class="btn btn-primary">Generate</button>
      <div id="container">
      </div>

      <div>
        <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S. No</th>
            <th>Short ID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
           <tr>
            <td><%=index + 1 %></td>
            <td><%=url.shortId %></td>
            <td><%=url.redirectUrl %></td>
            <td><%=(url.visitHistory.length) %></td>
           </tr>
          <% }) %>
        </tbody>
        </table>
        <% } %>
      </div>
    </form>
  </body>
</html>
